<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.MyRAFriend" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_teal</item>
        <item name="colorPrimaryVariant">@color/primary_teal_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_teal</item>

        <!-- Window background color -->
        <item name="android:windowBackground">@color/background_white</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.MyRAFriend.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/primary_teal</item>
        <item name="android:statusBarColor">@color/primary_teal</item>
        <item name="android:navigationBarColor">@color/primary_teal</item>
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>
